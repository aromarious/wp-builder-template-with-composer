{
    "name": "%BUILDER_NAME%/wp-builder-%SITENAME%",
    "authors": [
        {
            "name": "%BUILDER_NAME%",
            "email": "%BUILDER_EMAIL%"
        }
    ],
    "description": "build file for %SITENAME% wordpress site",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://wp-languages.github.io"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^5.0.3",
        "wpackagist-plugin/wp-multibyte-patch": "^2.8.2",
        "koodimonni-language/core-ja": "*",
        "aromarious/wp-dotenv": "^0.1.3"
    },
    "autoload": {
        "psr-0": {
            "Acme": "src/"
        }
    },
    "extra": {
        "installer-paths": {
            "%WP_CORE%wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "%WP_CORE%wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "dropin-paths": {
            "%WP_CORE%wp-content/languages/": [
                "vendor:koodimonni-language"
            ],
            "%WP_CORE%wp-content/languages/plugins/": [
                "vendor:koodimonni-plugin-language"
            ],
            "%WP_CORE%wp-content/languages/themes/": [
                "vendor:koodimonni-theme-language"
            ]
        },
        "wordpress-install-dir": "%WP_CORE%"
    },
    "scripts": {
        "copy-sample": [
            "vendor/aromarious/wp-dotenv/copy-dotenv-sample.sh"
        ],
        "make-env": [
            "echo Generating wp-config.php and index.php from .dot ....",
            "@generate-config-with-salts",
            "@generate-index"
        ],
        "generate-config": [
            "vendor/aromarious/wp-dotenv/generate-config.sh"
        ],
        "generate-config-with-salts": [
            "vendor/aromarious/wp-dotenv/generate-config.sh salts"
        ],
        "generate-index": [
            "vendor/aromarious/wp-dotenv/generate-index.sh"
        ]
    }
}